{
  "name": "pliny",
  "description": "Main entry point for pliny components and CLI",
  "homepage": "https://github.com/timlrx/pliny",
  "version": "0.0.10",
  "type": "module",
  "exports": {
    "./*": "./*",
    "./analytics/*": "./analytics/*",
    "./comments/*": "./comments/*",
    "./mdx-plugins/*": "./mdx-plugins/*",
    "./newsletter/*": "./newsletter/*",
    "./search/*": "./search/*",
    "./ui/*": "./ui/*",
    "./utils/*": "./utils/*"
  },
  "files": [
    "**"
  ],
  "scripts": {
    "dev": "tsup-node --watch && cp -fR dist/* ./ && rimraf dist && node add-use-client.mjs",
    "build": "rimraf dist && tsup-node && cp -fR dist/* ./ && rimraf dist && node add-use-client.mjs"
  },
  "author": "Timothy Lin <timothy0336@hotmail.com> (https://timlrx.com)",
  "dependencies": {
    "@docsearch/react": "^3.2.0",
    "@mailchimp/mailchimp_marketing": "^3.0.75",
    "contentlayer": "0.2.8",
    "github-slugger": "^1.4.0",
    "image-size": "1.0.0",
    "js-yaml": "4.1.0",
    "kbar": "0.1.0-beta.36",
    "next-contentlayer": "0.2.8",
    "next-themes": "^0.2.0",
    "remark": "^14.0.2",
    "unist-util-visit": "^4.1.0"
  },
  "peerDependencies": {
    "next": ">=12.0.0",
    "react": "^17.0.2 || ^18.0.0",
    "react-dom": "^17.0.2 || ^18.0.0"
  },
  "devDependencies": {
    "next": "13.0.3",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "rimraf": "^3.0.2",
    "tsup": "6.2.3",
    "typescript": "^4.8.3"
  },
  "lint-staged": {
    "*.+(js|jsx|ts|tsx)": [
      "eslint --fix"
    ],
    "*.+(js|jsx|ts|tsx|json|css|md|mdx)": [
      "prettier --write"
    ]
  },
  "publishConfig": {
    "access": "public"
  }
}
